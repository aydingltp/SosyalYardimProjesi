@model IEnumerable<SYP.Models.Muhtac>

@{
    ViewBag.Title = "Arsiv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Arşiv</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MuhtacAdiSoyadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            Tarih
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.MuhtacAdiSoyadi)
            </td>
            <td width="30%">
                <small>@Html.DisplayFor(modelItem => item.Aciklama)</small>
            </td>
            <td width="10%">
                <font face="Comic sans MS" size=" 2">@Html.DisplayFor(modelItem => item.EklenmeTarihi)</font>
            </td>
            <td width="25%">
                @Html.ActionLink("Arşivden Geri Al", "Arsivle", "Muhtac", new { id = item.Id }, new { @class = "btn btn-dark btn-sm" })
            </td>
        </tr>
    }
</table>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger"> Henüz kayıt yok!</div>
}
@if (TempData["arsivgeri"] != null)
{
    <div class="alert alert-success">Arşivden geri alındı.</div>
}



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".alert-success").fadeOut(5000);
    });
</script>