@model IEnumerable<SYP.Models.Portal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<style>
    .card-img-top {
        width: 85% !important;
    }
</style>
<div class="row portalrow">

    <div class="col-md-3" style="border:3px;">
        @Html.Partial("AramaPartial")
        @Html.Action("bagisSayilari", "Home")
    </div>
    <div class="col-md-9">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning">
                <h3> Kayıt Bulunamadı...</h3>
            </div>
        }
        else
        {
            <div class="col-md-12">

                <h1 class="my-4">
                    Güncel Yardım Destek Haberleri
                    <small></small>
                </h1>
                <hr />
                @foreach (var item in Model)
                {
                    <!-- Blog Post -->
                    <div class="card mb-4">
                        <img class="card-img-top" src="@item.Resim" alt="portal">
                        <div class="card-body">
                            <h2 class="card-title">@item.Baslik</h2>
                            <hr />
                            <p class="card-text">@item.Icerik</p><hr /><br />
                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        </div>
                        <div class="card-footer text-muted">
                            @item.EklenmeTarihi
                        </div>
                    </div>
                }

            </div>
        }

    </div>

</div>

